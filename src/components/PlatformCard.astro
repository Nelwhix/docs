---
interface Props {
  platform: Platform
}
import type { Platform } from '../data/integrations'

const { platform } = Astro.props
---

<li class="h-24 w-24 self-end">
  <a class="no-underline hover:no-underline" href={platform.link}>
    <img
      src={platform.logo}
      class="logo-light rounded-full transition-transform duration-500 hover:scale-110"
      loading="lazy"
      alt={platform.name}
    />
    <img
      src={platform.logoDark}
      class="logo-dark rounded-full transition-transform duration-500 hover:scale-110"
      loading="lazy"
      alt={platform.name.toUpperCase()}
    />
    <p class="my-1 text-center">{platform.name}</p>
  </a>
</li>

<style>
  img {
    box-shadow: 0px 0px 9px -3px hsla(var(--color-gray-5), 0.3);
  }
  .logo-light {
    display: var(--logo-light-display);
    background-color: var(--color-base-white);
  }

  .logo-dark {
    display: var(--logo-dark-display);
  }
</style>
